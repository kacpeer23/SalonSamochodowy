        <TextBox Name="txtMarka1" HorizontalAlignment="Left" Margin="577,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Model:" HorizontalAlignment="Left" Margin="534,80,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtModel1" HorizontalAlignment="Left" Margin="577,84,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Silnik:" HorizontalAlignment="Left" Margin="534,120,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtSilnik1" HorizontalAlignment="Left" Margin="577,124,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Cena:" HorizontalAlignment="Left" Margin="534,160,0,0" VerticalAlignment="Top"/>
        <TextBox Name="txtCena1" HorizontalAlignment="Left" Margin="577,164,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
